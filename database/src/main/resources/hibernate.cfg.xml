<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/coinsite</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="by.itacademy.entity.Coin"/>
        <mapping class="by.itacademy.entity.CoinDescription"/>
        <mapping class="by.itacademy.entity.Collection"/>
        <mapping class="by.itacademy.entity.Country"/>
        <mapping class="by.itacademy.entity.Metal"/>
        <mapping class="by.itacademy.entity.Sale"/>
        <mapping class="by.itacademy.entity.Series"/>
        <mapping class="by.itacademy.entity.Theme"/>
        <mapping class="by.itacademy.entity.User"/>
    </session-factory>
</hibernate-configuration>